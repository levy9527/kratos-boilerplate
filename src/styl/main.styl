}

.container,
label,
fieldset,
input,
button
  box-sizing border-box

.dark
  color $dark

// 背景颜色
.primary-color
  color $primary-color

.primary-bg
  background-color $primary-color

.linear-primary-bg-to-right
  background-image linear-gradient(-45deg, #0099FF 0, #0066FF 100%)

.linear-primary-bg-to-bottom
  background-image linear-gradient(to bottom, #0066FF 0, #0099FF 100%)

.second-color
  color $second-color

.red
  color #ff0000
.white-bg
  background-color white
.white
  color white !important

.gray-bg
  background-color $page-bg-color

// 字体有默认大小, 颜色的, 然后再加上语义的区分
// 文字颜色
html
  font-family "Microsoft Yahei","PingFang SC","Helvetica Neue","Helvetica","Arial","WenQuanYi Micro Hei Mono", "WenQuanYi Micro Hei", "Microsoft Yahei Mono"
  -webkit-font-smoothing antialiased
  font-size 14px
  line-height 24px
  color $normal-text-color
  background-color $page-bg-color

.important-text
  color $import-text-color

.desc-text
  color #999

.placeholder-text
  color $placeholder-color

::-webkit-input-placeholder  /* WebKit browsers */
  color $placeholder-color

:-moz-placeholder  /* Mozilla Firefox 4 to 18 */
  color $placeholder-color

::-moz-placeholder  /* Mozilla Firefox 19+ */
  color $placeholder-color

:-ms-input-placeholder { /* Internet Explorer 10+ */
  color $placeholder-color
}

.orange-color
  color #ff4200

// 文字大小
.huge-text
  font-size 36px
  font-weight 400
.large-text
  font-size 32px
  color $import-text-color
// 无奈之举。UI各种字体都有
.f24
  font-size 24px
.f18,
.md-text
  font-size 18px
.f16
  font-size 16px
.title
