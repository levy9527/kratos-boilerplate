  padding 30px 10px
  background-color white
  border 1px solid $second-color

  .error
    background-color $page-bg-color
    display none
    &.active
      display block

  button[type=primary]
    display block
    width 100%
    margin 18px 0
    padding 10px
    font-size 16px

  .form-title
    font-weight bolder

  form
    margin 24px 0

  fieldset
    padding 10px
    margin 0 0 18px
    border 1px solid $second-color

    label
      display inline-block
      width 88px
      padding-left 10px
      border-right 1px solid $second-color

    // TODO another child flex ?
    select,
    input
      padding-left 10px
      width calc(100% - 88px)
      border 0
      outline 0
    select
      text-indent 5px
      background-color white

// cooperation/product/solution 有用
.first-sight
  padding 100px 0 120px
  color white
  background-color #000
  .desc
    margin 48px 0
    font-size 16px
    max-width 600px
    max-height 72px // 超出三行文本隐藏
    overflow hidden
  .link-btn
    width 144px
    height $btn-height
    line-height $btn-height
    color white
    border 1px solid white
    background-color $import-text-color
// platform-check-in/case-detail 有用
.card-with-link {
  display flex
  flex-direction column
  align-items center
  border 1px solid $border-color
  padding 50px 0
  width 23%
  margin-right 2.666%

  &:hover {
    border-color $primary-color
  }

  img {
    width 60px
    height 60px
    display block
  }

  .card-name {
    margin-top 30px
    font-size 18px
    font-weight 600
  }

  .card-desc {
    margin 15px 0 20px
  }

  .link-btn {
    border-color $border-color
  }
}
// 客户案例

$show-case-padding = 80px
.show-case
  padding $show-case-padding 0
  .show-case-title
    margin-bottom 20px
    text-align center
    font-size 28px
    color $dark
  .show-case-content
    margin-top $show-case-padding

// a 元素 使用 link-btn 样式
.link-btn
  display inline-block
  width 120px
  height $btn-height
  line-height $btn-height
  border 1px solid $dark
  text-align center
  color $dark
  background-color white

  &.primary {
    background-color $primary-color
    color white
    border-color $primary-color
  }


// 图文样式: 左边是图片, 右边是文字(文字又分上下)。 首页有用
.figure
  display flex
  align-items center
  padding 25px 0

  .font_family
    font-size 45px
    margin-right 30px

  .figure-text
    width 155px
    font-size 12px

  .figure-title
    margin 0 0 10px
    font-size 16px
    color $dark

  .figure-img
    height 80px
    margin-right 20px

// 容器下的图文, 自动伸缩
.container .figure
  flex 1

.divider
  display block
  width 100%
  height 1px
  border-bottom 1px solid $border-color

// tab 组件 product 有用
.component-tabs-wrap {
  .component-tabs {
    display flex
    justify-content space-between
    height 70px
    padding 20px 42px 0
    border 1px solid transparent
    border-bottom 1px solid $border-color
  }
  .component-tab {
    display flex
    align-items center
    cursor pointer
    .word-block {
      position relative
      display flex
      align-self stretch
      align-items center
    }

    &:hover {
      color $primary-color
    }

    &.active{
      color $primary-color
      .word-block {
        &:after{
          content ""
          width 80%
          height 2px
          position absolute
          background $primary-color
          bottom 0
          left 10%
        }
      }
    }
  }

  [name=tabRadio] {
    display none
  }

  [name=tabRadio]:checked + .component-tab-content {
    display block
  }

  .component-tab-content {
    display none
    padding-top 40px

    .md-text {
      margin-bottom 20px
    }

    .left-side,
    .right-side {
      display table-cell
      vertical-align middle
    }
    .right-side {
      padding 60px
    }
  }
  .font_family {
    font-size 30px
    margin-right 15px
  }
}

.fixed-btn {
  position fixed
  right 14px
  bottom 100px
  width 14px
  padding 12px 10px
  text-align center
  color white
  background-color $primary-color
  cursor pointer
  z-index 30

  .icon-paimaizixun_fuzhi {
    position relative
    left -3px
    font-size 20px
  }
}

