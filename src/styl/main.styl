    min-width 300px
    padding 0 10px 20px 40px
    line-height 1.15

    .product-item
      display block
      padding 20px 0 0 0

      &:hover
        color $primary-color

        .item-title
          color $primary-color

        .small-text
          color $primary-color

      .item-title
        display inline-block
        margin 0 0 5px
        color white

      .small-text
        color $normal-text-color


    .product-title
