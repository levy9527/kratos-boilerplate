// 可复用样式
.label {
  position relative
  display inline-block
  box-sizing border-box
  width 70px
  height 20px
  line-height 20px
  margin-left 14px
  text-align center
  color white
  font-size 12px

  &::before {
    content ''
    position  absolute
    right  100%
    top  50%
    transform translateY(-50%)
    width  0
    height  0
    border-top  3px solid transparent
    border-right  6px solid $primary-color
    border-bottom  3px solid transparent
  }

  &.green {
    background-color $green

    &::before {
      border-right-color $green
    }
  }

  &.red {
    background-color $red

    &::before {
      border-right-color $red
    }
  }
}
.arrow-right {
  width 9px
  height @width
  border-top 1px solid
  border-right 1px solid
  border-color $border-color
  transform rotate(45deg)
}

.arrow-left {
  width 9px
  height @width
  border-top 1px solid
  border-left 1px solid
  border-color $border-color
  transform rotate(-45deg)
}

// solution && product 案例客户可复用
.slider {
  justify-content space-between
  align-items center

  .slider-container {
    width 960px
    overflow hidden
  }

  .slider-figure {
    box-sizing border-box
    display flex
    align-items center
    min-width 100%
    height 240px
    padding 50px 60px
    background-color $page-bg-color

  }

  .figure-title {
    font-size 18px
    color $dark
    margin-bottom 20px
  }

  .figure-img {
    width 140px
    height @width
    border-radius 50%
  }

  .figure-text {
    max-width 655px
    margin-left 40px
  }

  .arrow-box {
    display flex
    align-items center
    justify-content center
    width 56px
    height @width
    border 1px solid $border-color
    cursor pointer

    &:hover {
      background-color $primary-color

      .arrow-right,
      .arrow-left {
        border-color white
      }
    }
  }

  .arrow-right,
  .arrow-left {
    width 26.8px
    height @width
    border-width 2px
    border-color $normal-text-color
  }

  .arrow-left {
    margin-left 12px
  }

  .arrow-right {
    margin-right 12px
  }
}

