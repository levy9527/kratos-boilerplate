// TODO 总结 规范要有: 颜色, 字体, 链接, 按钮
@import "mixin.styl"
@import "media.styl"
// 品牌色、重要按钮、操作文字色
$primary-color = #3366FF

// 次要按钮边框、表单边框色、分割线色, 灰色
$second-color = #e1e1e1
$border-color = #e1e1e1

$normal-text-color = #666
$lighter-text-color = #999

// 黑色
$import-text-color = #222
$dark = #222

$placeholder-color = #ccc
// 页面背景色
$page-bg-color = #F9F9FA

$red = #c42e00
$green = #33cc00

$btn-height = 34px

.hide
  display none

.block {
  display block
}

// 移动端
@media screen and (max-width 991px) {
  .pc {
    display none !important
  }

  .show-case {
    padding 40px 0

    .show-case-content {
      margin-top 40px
    }
  }
}

@media screen and (min-width 992px) {
  .mobile {
    display none !important
