// layout
$navbar-height = 60px
.navbar
  display flex
  align-items center
  //justify-content space-between
  height $navbar-height
  line-height $navbar-height
  padding 0 20px
  background-color $import-text-color

  .navbar-section
    display flex

  .logo
    display flex
    align-items center
    margin-right 120px
  .logo-img
    width 125px
    // vertical-align middle

  .nav-item
    display inline-block
    padding-right 30px
    color white

    &:hover + .product-menu
      opacity 1
      z-index 20


    .nav-item-link
      position relative
      display inline-block
      color white

      &:after
        position absolute
        left 0
        bottom 0
        content ''
        width 100%
        border-top 2px solid transparent

    &:hover
      .nav-item-link
        color $primary-color

        &:after
          border-color $primary-color

  .product-menu
    flex-wrap wrap
    opacity 0
    z-index -1
    position absolute
    left 0
    right 0
    width 1200px
    margin auto
    top $navbar-height
    border-top 1px solid #2a2a2a
    background-color $dark

    &:hover
      opacity 1
      z-index 20

  .product-box
