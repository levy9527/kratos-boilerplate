// solution/cooperation 都有
// 一般来说, 容器会添加class: .container.flex
.scale-item {
  flex 1
  box-sizing border-box
  padding 48px 0 32px
  background-color white
  text-align center
  border-top 1px solid $border-color
  border-bottom 1px solid $border-color
  border-right 1px solid $border-color

  .font_family {
    display inline-block
    margin-bottom 40px
    font-size 64px
  }

  .md-text {
    color $dark
  }

  &:hover {
    color white
    background-image linear-gradient(-180deg, #0069FF 0%, #4FACFE 100%)

    .md-text {
      color white
    }

    .link-btn {
      color #4EACFE
      border-color @color
    }
  }

  &:first-child {
    border-left 1px solid $border-color
  }

  .text {
    box-sizing border-box
    width 200px
    margin 24px auto 34px
    padding 0 15px
    text-align left
  }

  .link-btn {
    border-color $border-color
  }
}

// login/register/customer-info 有用
