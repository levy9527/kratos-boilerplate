$primary-color = #3366FF
$second-color = #e1e1e1
$import-text-color = #222

// 字体有默认大小, 颜色的, 然后再加上语义的区分

// 文字颜色
html
  font-family "Microsoft Yahei","PingFang SC","Helvetica Neue","Helvetica","Arial","WenQuanYi Micro Hei Mono", "WenQuanYi Micro Hei", "Microsoft Yahei Mono"
  -webkit-font-smoothing antialiased
  font-size 14px
  line-height 24px
  color #666
  background-color #F9F9FA

.important-text
  color $import-text-color

.desc-text
  color #999

.placeholder-text
  color #ccc

// 文字大小
.large-text
  font-size 32px
  color $import-text-color
.title
  font-size 16px
  color $import-text-color

// TODO 元素内换行
p
  white-space pre

// 背景颜色
.primary-color
  color $primary-color

.primary-bg
  background-color $primary-color

.linear-primary-bg-to-right
  background-image linear-gradient(-136deg, #0066FF 0%, #0099FF 100%)

.linear-primary-bg-to-bottom
  background-image linear-gradient(to bottom, #0066FF 0%, #0099FF 100%)

.second-color
  color $second-color

// faq
.faq

  .container
    display flex

  .menu
    min-width 220px
    background-color #ECF0F4

  .menu-item
    &.active
      color $primary-color
      border-left 2px solid $primary-color

// header
$header-height = 80px
#header
  position relative
  height $header-height
  line-height $header-height

  .nav
    position fixed
    left 0
    right 0
    margin auto
    height $header-height
    width 1100px
    display flex
    align-items center

  .logo
    height 48px

  .menu
    display flex
    list-style none

