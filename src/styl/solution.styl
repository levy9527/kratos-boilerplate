.solution {
  .ad {
    .container-item {
      box-sizing border-box
      padding 48px 42px 66px
      height 300px
      border-right 1px solid $border-color
      border-bottom 1px solid $border-color

      &:first-child {
        border-left 1px solid $border-color
      }

      .md-text {
        margin 28px 0 20px
      }
    }
  }

  .total-view {
    background-color white

    .total-view-img {
      //width 300px
      //height 320px
      margin-right 80px
    }

    .figure-box {
      margin-top 96px
    }

    .figure-img {
      height auto
    }

    .figure-text {
      max-width unset
    }
  }

  .core-business {
    background-color $dark

    .business-item {
      box-sizing border-box
      display flex
      align-items center
      justify-content center
      height 80px
      margin-bottom 20px
      border-top 1px solid white
      border-bottom 1px solid white
      border-right 1px solid white

      &.active {
        background-image linear-gradient(to bottom, #0066FF 0, #0099FF 100%)
      }

      &:first-child {
        border-left 1px solid white
      }
    }
    .font_family {
      margin-right 20px
    }

    .tab-content {
      height 640px
      align-items center
    }
    .text {
      margin-left 60px
      max-width 440px
    }
  }


  .slider {
    justify-content space-between
    align-items center

    .slider-content {
      box-sizing border-box
      width 960px
      height 240px
      padding 50px 60px
      background-color $page-bg-color
    }

    .slider-figure {
      height 100%
      align-items center
    }

    .figure-title {
      font-size 18px
      color $dark
      margin-bottom 20px
    }

    .figure-img {
      width 140px
      height @width
      border-radius 50%
    }

    .figure-text {
      max-width 655px
      margin-left 40px
    }

    .arrow-box {
      display flex
      align-items center
      justify-content center
      width 56px
      height @width
      border 1px solid $border-color
      cursor pointer

      &:hover {
        background-color $primary-color

        .arrow-right,
        .arrow-left {
          border-color white
        }
      }
    }

    .arrow-right,
    .arrow-left {
      width 26.8px
      height @width
      border-width 2px
      border-color $normal-text-color
    }

    .arrow-left {
      margin-left 12px
    }

    .arrow-right {
      margin-right 12px
    }
  }
}
