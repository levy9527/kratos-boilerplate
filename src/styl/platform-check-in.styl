// 接入平台
.platform-check-in {
  background #fff
  .first-sight {
    .msg {
      font-size 16px
      margin 40px 0
    }
    .link-btn {
      width 180px
    }
  }
  .two-sight {
    .container {
      display flex
      justify-content space-between
      padding 60px 0 110px 0
    }
  }
  .three-sight {
    background-color $page-bg-color
    .show-case-title {
      margin-bottom 90px
    }
    .dev-process {
      display flex
      justify-content center
      .step {
        flex 1
        display flex
        flex-direction column
        align-items center
      }
      .step-img {
        width 120px
        height 120px
        background #fff
        border-radius 50%
        background-repeat no-repeat
        background-position center
        background-size 40px
      }
      .icon-step1{
        background-image url("../images/liucheng1.png")
      }
      .icon-step2{
        background-image url("../images/liucheng2.png")
      }
      .icon-step3{
        background-image url("../images/liucheng3.png")
      }
      .icon-step4{
        background-image url("../images/liucheng4.png")
      }
      .icon-arrow {
        background url("../images/liucheng-arrow.png") no-repeat center 184px
        background-size 50px
      }
      .step-name {
        font-size 18px
        margin 60px 0 15px 0
        .name {
          vertical-align middle
        }
      }
      .step-desc {
        white-space nowrap
      }
      .badge {
        display inline-block
        width 26px
        height 26px
        background $dark
        border-radius 13px
        color #fff
        text-align center
        margin-right 10px
        font-size 16px
      }
    }
  }
}
