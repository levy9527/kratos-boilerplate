// 首页
.index
  .first-sight {
    background-image url(../images/index-banner.jpg)
    background-size cover

    .link-btn {
      border-color $primary-color
    }

    .msg {
      display inline-block
      //width 458px
      height 52px
      padding 0 32px
      margin 34px 0 38px 0
      border 1px solid white
      line-height 52px
      text-align center
      color white
    }
  }

  .slider {
    position relative

    .arrow-box {
      position absolute
      z-index 5

      border-color $normal-text-color

      &:hover {
        border-color $primary-color
      }
    }

    .arrow-left-box {
      left 20px
    }

    .arrow-right-box {
      right 20px
    }
  }

  .slider-container {
    width 100%
  }

  .slider-img {
    width 100%
  }

  .show-case-content {
    position relative
  }

  .i-product-container {
    margin-top 80px
    height 100px
    overflow visible
  }

  .i-product {
    display flex
    flex-direction column
    align-items center
    justify-content center
    position relative
    //height 100px
    color white
    background-color $dark
    cursor pointer

    //&:not(:last-child) {
    //  border-right 1px solid $border-color
    //}

    &.active {
      transform translateY(-10px)
      height 110px
      background-image linear-gradient(-35deg, #0099ff 0%, #0066ff 100%), linear-gradient( #00a2ca, #00a2ca)
      background-blend-mode normal, normal
    }

    .f16 {
      font-weight 300
    }
  }

  .tab-content {
    display none

    &.block {
      display block
    }
  }

  .product-figure {
    padding 50px 0
    border-bottom 1px solid $border-color

    .figure-img {
      width 105px
      height 105px
      margin-right 30px
    }

    .figure-text {
      text-align left
      margin-right 95px
      width 688px
    }

    .figure-title {
      margin-bottom 20px
      font-size 30px
      line-height 1.4
    }

    .link-btn {
      align-self flex-end
      margin-bottom 10px
      border-color $dark
      background-color $dark
      color white
    }
  }

  .service-provider {
    background-image url(../images/index-service-banner.jpg)
    background-repeat no-repeat
    background-size 100% 238px
  }
  .service {
    margin-top 60px

    .service-row {
      flex-wrap wrap
    }

    .service-item {
      box-sizing border-box
      width 360px
      height 80px
      padding 20px
      align-items center
      justify-content space-between
      text-align left
      border-left 1px solid transparent

      .item-flex {
        display flex
        align-items center
      }

      .arrow-right {
        opacity 0
      }

      &:hover {
        background-color white
        border-left 1px solid $primary-color

        .arrow-right {
          opacity 1
        }
      }
    }

  }

  .solution {
    background-image url(../images/index-solution-banner.png)
    color white

    &.pc {
      .industry-item {
        flex 1
        box-sizing border-box
        height 532px

        .item-name {
          display flex
          flex-direction column
          justify-content center
          height 100%
        }

        .item-detail {
          display none
          padding 70px 30px 24px
          text-align left
        }

        &:hover {
          flex-basis 28.5%
          max-width 28.5%
          background $dark

          .item-name {
            display none
          }

          .item-detail {
            display block
          }
        }
      }
    }

    &.mobile {

      &.show-case {
        //padding 40px 0 0
      }

      .show-case-title {
        //margin-bottom 40px
      }

      .industry-item {
        flex-basis 50%
        height 148px
      }

      .item-name {
        display flex
        flex-direction column
        justify-content center
        align-items center
        height 100%
      }

      .f24 {
        margin-bottom 0
      }
    }
  }

  .industry {
    display flex
    flex-wrap wrap

    .font_family {
      font-size 38px
    }

    .icon-dichan {
      font-size 36px
    }

    .icon-qiche_fuzhi {
      font-size 50px
    }

    .icon-nongye {
      font-size 42px
    }

    .icon-kuaixiao {
      font-size 46px
    }

  }


  .relative-product {
    display flex

    .product-item {
    }

    .circle {
      display flex
      align-items center
      justify-content center
      width 48px
      height 48px
      margin-right 20px
      border 1px solid white
      border-radius 50%
    }

    .font_family {
      font-size 24px
    }

  }

  .trademark {
    display flex
    flex-wrap wrap
    border-left 1px solid $border-color
    border-bottom 1px solid $border-color
    margin-right -1px

  }

  .placeholder-box
    //box-sizing border-box
    //width 200px
    width 199px
    height 210px
    border-right 1px solid $border-color
    border-top 1px solid $border-color


  .mark-item {
    width 100%
    height 100%
    background-color white

    &:hover {
      position absolute
      top 0
      width 340px
      height 420px
      box-shadow 0 0 1px 1px $border-color
      background-color white
      z-index 10

      .item-img {
        width 128px
      }

      .link-btn,
      .item-text {
        opacity 1
        display block
        margin-left auto
        margin-right auto
      }

    }

    .item-img {
      margin-top 52px
      width 92px
    }

    .item-text {
      width 224px
      max-height 100px
      overflow hidden
      margin 35px auto
      display none
    }

    .link-btn {
      opacity 0
    }
  }

