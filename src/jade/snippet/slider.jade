script.
  // slider
  var slider = new Siema({
    selector: '.slider-container',
    duration: 300,
    easing: 'ease-out',
    perPage: 1,
    startIndex: 0,
    draggable: true,
    multipleDrag: false,
    threshold: 20,
    loop: true,
    rtl: false
  })


  $('.arrow-right-box').on('click', function (e) {
    slider.next()
  })

  $('.arrow-left-box').on('click', function (e) {
    slider.prev()
  })

