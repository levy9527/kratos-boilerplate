extends layout.jade
block title
  title 注册
block content
  section.register
    div.form-box
      div.bolder 欢迎注册云徙云账号，你将获得免费试用
      form(action="javascript:;")
        //fieldset.error.bolder.active
          span x
          span 登录名或登录密码不正确
        fieldset
          label(for="account") 账号
          input#account(placeholder="您的账户名和登录名")
        fieldset
          label(for="password") 密码
          input#password(type="password" placeholder="请至少使用两种字符组合,不少于6位")
        fieldset
          label(for="confirm") 确认密码
          input#confirm(type="password" placeholder="请再次输入密码")
        fieldset
          label(for="phone") 手机号
          input#phone(type="tel" placeholder="11位手机号")
        fieldset.get-code
          label 验证码
          input(placeholder="请输入验证码")
          button.get-code-btn 获取验证码
        div
          input(type="checkbox" style="width: auto; margin-right: 10px")
          a(href="").small-text 《云徙云网站服务条款》
          span.small-text 和
          a(href="").small-text 《法律声明和隐私权政策》
        button(type="primary") 同意条款并注册
        div.text-center
          span 已有账号?
          a(href="login.html") 立即登录
