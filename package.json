{
  "name": "static-site-boilerplate",
  "version": "1.0.0",
  "description": "A simple and fast boilerplate for static projects using Gulp, Pug, Stylus and PostCSS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LFeh/kratos-boilerplate.git"
  },
  "browserslist": [
    "> 5%",
    "last 2 versions"
  ],
  "scripts": {
    "start": "gulp",
    "build": "gulp build && gulp deploy",
    "test": "npm run lint && npm run reporter",
    "lint": "npm run lint:css",
    "lint:js": "standard",
    "lint:css": "./node_modules/.bin/stylint ./src/",
    "precommit": "npm run lint",
    "reporter": "./node_modules/.bin/parker ./build/css/*.css",
    "fix": "standard --fix"
  },
  "keywords": [
    "boilerplate"
  ],
  "author": "Felipe Fialho <hi@felipefialho.com> (http://www.felipefialho.com/)",
  "license": "MIT",
  "standard": {
    "ignore": [
      "gulpfile.js",
      "build/",
      "dist/",
      "src/images/",
      "src/jade/",
      "src/styl/"
    ]
  },
  "dependencies": {
    "gulp-newer": "^1.4.0",
    "gulp-rev": "^8.1.1",
    "gulp-rev-collector": "^1.2.4",
    "lazysizes": "^4.0.0-rc3",
    "picturefill": "^3.0.2",
    "run-sequence": "^2.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel": "^6.23.0",
    "babel-core": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "browser-sync": "^2.18.12",
    "del": "^3.0.0",
    "fs-promise": "^2.0.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.2",
    "gulp-group-css-media-queries": "^1.2.0",
    "gulp-imagemin": "^3.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^7.0.0",
    "gulp-pug": "^3.3.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-stylus": "^2.6.0",
    "gulp-uglify": "^3.0.0",
    "husky": "^0.14.3",
    "js-yaml": "^3.9.0",
    "lost": "^8.1.0",
    "mdcss": "^1.5.2",
    "parker": "0.0.10",
    "postcss-flexibility": "^2.0.0",
    "postcss-font-magician": "^2.0.0",
    "poststylus": "^0.2.3",
    "rucksack-css": "^0.9.1",
    "rupture": "^0.6.2",
    "standard": "^11.0.0",
    "stylint": "^1.5.9"
  }
}
